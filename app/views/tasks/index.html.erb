<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li class="list-group-item"><input type="checkbox" <%= "checked" if task.completed %>>
    <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you shure?" } %>
    </li>
  <% end %>
</ul>
<%= link_to "Add a task", new_path %>
